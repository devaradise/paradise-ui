{
  "name": "@paradise-ui/text-field",
  "version": "1.0.2",
  "description": "An enhanced version of common &lt;input&gt; component",
  "keywords": [
    "Form",
    "TextField"
  ],
  "author": "Muhammad Syakirurohman <syakirurahman@gmail.com>",
  "homepage": "https://github.com/devaradise/pui#readme",
  "license": "MIT",
  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devaradise/pui.git",
    "directory": "packages/components/TextField"
  },
  "bugs": {
    "url": "https://github.com/devaradise/pui/issues"
  },
  "scripts": {
    "build": "rm -rf dist && tsup src && tsup src/*.ts src/*.tsx --dts-only",
    "dev": "pnpm build:fast -- --watch",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "release": "pnpm publish && pnpm postpack"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "clean-package": "2.1.1",
    "react": "^18.0.0"
  },
  "clean-package": "./../clean-package.config.json"
}
