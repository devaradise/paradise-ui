{
  "name": "@paradise-ui/alert",
  "version": "1.0.0-aplha.2",
  "description": "A component to display contextual messages such as information, success, warning and error messages",
  "keywords": [
    "Feedback",
    "Alert",
    "React component"
  ],
  "author": "Muhammad Syakirurohman <syakirurahman@gmail.com>",
  "homepage": "https://github.com/devaradise/paradise-ui#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./style" : "./dist/style.css",
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devaradise/paradise-ui.git",
    "directory": "packages/components/Alert"
  },
  "bugs": {
    "url": "https://github.com/devaradise/paradise-ui/issues"
  },
  "scripts": {
    "build": "rm -rf dist && tsup src && tsup src/*.ts src/*.tsx --dts-only",
    "dev": "pnpm build:fast -- --watch",
    "typecheck": "tsc --noEmit",
    "build:fast": "tsup src",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "release": "pnpm build && pnpm publish && pnpm postpack"
  },
  "dependencies": {
    "@paradise-ui/common": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "devDependencies": {
    "clean-package": "2.1.1",
    "react": "^18.0.0"
  },
  "clean-package": "./../clean-package.config.json"
}
